project lib
    : usage-requirements <include>..
    ;

import boost
    ;

boost.use-project
    ;

constant test_sources
    : [ glob *.test.cpp ]
    ;

constant sources
    : [ glob *.cpp : $(test_sources) ]
    ;

lib lib
    : $(sources)
    : <include>..
    ;

import boost
    ;

boost.use-project
    ;

import testing
    ;

run lib.test.cpp
    :
    :
    : <library>lib
      <library>/external//ut
    : test
    ;
